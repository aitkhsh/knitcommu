<% content_for(:title, t('.title')) %>
<div class="container mx-auto px-4 min-h-screen">
  <div class="flex flex-col justify-center px-6 py-12 lg:px-8">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900"><%= t('.title') %></h2>
  </div>

    <div class="mt-10 sm:mx-auto w-full max-w-lg rounded-lg">
      <%= form_with model: @user, url: profile_path, method: :put do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :email, class: "form-label block text-sm font-bold leading-6 text-gray-900 mt-4" %>
        <div class="mt-1">
          <%= f.email_field :email, class: "form-control w-full border-2 border-pink-200/50 rounded-lg mb-4 p-2" %>
        </div>

        <%= f.label :name, class: "form-label block text-sm font-bold leading-6 text-gray-900 mt-4" %>
        <div class="mt-1">
          <%= f.text_field :name, class: "form-control w-full border-2 border-pink-200/50 rounded-lg mb-4 p-2" %>
        </div>

        <div class="my-3">
          <%= f.label :avatar, class: "form-label block text-sm font-bold leading-6 text-gray-900 mt-4" %>
          <%= f.file_field :avatar, class: 'form-control mb-3', accept: 'image/*' %>
          <%= f.hidden_field :avatar_cache %>
          <div class='mt-3 mb-3'>
            <%= image_tag @user.avatar.url,
                          class: 'rounded-full',
                          id: 'preview',
                          size: '100x100' %>
          </div>
        </div>
        <div class="text-center text-medium my-3">
        <%= f.submit class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>