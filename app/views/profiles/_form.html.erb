<%= form_with model: @profile, class: "new_profile" do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div>
    <%= f.label :name, class: "form-label block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
    <%= f.text_field :name, class: "form-control block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
  </div>

  <div>
    <%= f.label :body, class: "form-label block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
    <%= f.text_area :body, class: "form-control block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
  </div>

  <div class="mt-2">
    <%= f.label :profile_image %>
    <%= f.file_field :profile_image, class: "form-control", accept: 'image/*' %>
    <%= f.hidden_field :profile_image_cache %>
  </div>

  <%= f.submit nil, class: "btn btn-secondary" %>
<% end %>
