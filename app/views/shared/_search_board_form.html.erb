<%= form_with model: search_form, url: search_boards_path, scope: :q, class: 'input-group mb-3', method: :get do |f| %>
  <%= f.search_field :title_or_body, id: 'search_field_of_board', class: 'input input-bordered input-secondary', placeholder: 'プロフィール' %>
  <%= f.search_field :username, id: 'search_field_of_user', class: 'input input-bordered input-secondary', placeholder: 'ユーザー' %>
  <%= f.search_field :tag, id: 'search_field_of_tag', class: 'input input-bordered input-secondary', placeholder: 'タグ' %>
  <%= f.submit '探す', class: "btn btn-secondary text-gray-900" %>
<% end %>