<header>
  <div class="navbar bg-base-50">
    <div class="flex-1">
      <a><%= link_to "あむ編むコミュ！", root_path, class: "btn btn-ghost text-xl gray-900" %></a>
    </div>
    <div class="flex-none">
      <div>
        <a><%= link_to t('header.board_index'), boards_path, class: "btn btn-ghost text-xs"%></a>
      </div>
      <div>
        <a><%= link_to t('header.create_board'), new_board_path, class: "btn btn-ghost text-xs"%></a>
      </div>
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <%= image_tag current_user.avatar_url %>
          </div>
        </div>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2">
          <li>
            <a>
              <%= link_to t('header.itempage'), items_path, class: 'dropdown-item' %>
            </a>
          </li>
          <li>
            <a>
              <%= link_to t('header.profile'), profile_path, class: 'dropdown-item' %>
            </a>
          </li>
          <li>
            <a>
              <%= link_to "使い方ガイド", user_guide_path, class: 'dropdown-item' %>
            </a>
          </li>
          <li><a><%= link_to t('header.logout'), logout_path, class: 'dropdown-item', data: { turbo_method: :delete } %></a></li>
        </ul>
      </div>
    </div>
  </div>
</header>