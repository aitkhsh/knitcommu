<header>
  <div class="navbar bg-base-100">
    <div class="flex-1">
      <a class="btn btn-ghost text-xl">あむ編むコミュ！</a>
    </div>
    <div class="flex-none gap-2">
      <div>
        <a><%= link_to t('header.profile_index'), profiles_path %></a>
      </div>
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <img
              alt="Tailwind CSS Navbar component"
              src="https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.webp" />
          </div>
        </div>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
          <li><a><%= current_user.decorate.full_name %></a></li>
          <li>
            <a>
              <%= link_to t('header.mypage'), '#', class: 'dropdown-item' %>
            </a>
          </li>
          <li>
            <a>
              <%= link_to t('header.create_profile'), new_profile_path, class: 'dropdown-item' %>
            </a>
          </li>
          <li><a>Settings</a></li>
          <li><a><%= link_to t('header.logout'), logout_path, class: 'dropdown-item', data: { turbo_method: :delete } %></a></li>
        </ul>
      </div>
    </div>
  </div>
</header>